@*@model List<Book>*@
@model Book[]
@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results</h1>

@*@if (Model.Count == 0)*@
@if (Model.Length == 0)
{
    <p>Not Found</p>
}
else
{
    <ul>
        @foreach (var book in Model)
        {
            <li><a href="@Url.Action("Index", "Book", new {id = book.Id})">@book.Title</a></li>
        }
    </ul>
}